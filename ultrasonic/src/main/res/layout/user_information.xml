<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	a:layout_width="fill_parent"
	a:layout_height="fill_parent"
	a:orientation="vertical"
	a:paddingLeft="15dp"
	a:paddingRight="15dp"
	a:paddingTop="10dp">

	<TextView
		a:id="@+id/text_view_userInformation_informationText"
		a:layout_width="match_parent"
		a:layout_height="wrap_content"
		a:layout_marginTop="6dip"
		a:text="@string/user_information_inf_text"
		a:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView
		a:id="@+id/text_view_userInformation_space"
		a:layout_width="match_parent"
		a:layout_height="wrap_content"
		a:layout_marginLeft="10dip" />


	<LinearLayout
		a:layout_width="match_parent"
		a:layout_height="wrap_content"
		a:orientation="horizontal"
		a:paddingTop="10dp">

		<TextView
			a:id="@+id/text_view_userInformation_textGenderSelection"
			a:layout_width="wrap_content"
			a:layout_height="match_parent"
			a:layout_marginLeft="10dip"
			a:layout_marginTop="6dip"
			a:gravity="center"
			a:text="@string/user_information_gender"
			a:textAppearance="?android:attr/textAppearanceMedium" />

		<ImageView
			a:id="@+id/image_view_male"
			a:layout_width="50dp"
			a:layout_height="100dp"
			a:layout_weight="2"
			a:adjustViewBounds="true"
			a:scaleType="fitCenter" />

		<View
			a:layout_width="2px"
			a:layout_height="100dp"
			a:background="#838383" />
		<ImageView
			a:id="@+id/image_view_female"
			a:layout_width="50dp"
			a:layout_height="100dp"
			a:layout_weight="2"
			a:adjustViewBounds="true"
			a:scaleType="fitCenter" />

	</LinearLayout>

	<LinearLayout
		a:layout_width="match_parent"
		a:layout_height="wrap_content"
		a:orientation="horizontal"
		a:paddingTop="25dp">

		<Spinner
			a:id="@+id/spinner_age"
			a:layout_width="fill_parent"
			a:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout
		a:layout_width="match_parent"
		a:layout_height="wrap_content"
		a:orientation="horizontal"
		a:paddingTop="25dp">

		<Button
			a:id="@+id/button_genres"
			a:layout_width="wrap_content"
			a:layout_height="wrap_content"
			a:layout_centerHorizontal="true"
			a:layout_marginTop="10dp"
			a:layout_weight="1"
			a:text="loading genres ..." />
	</LinearLayout>

	<RelativeLayout
		a:layout_width="match_parent"
		a:layout_height="wrap_content"
		a:orientation="horizontal"
		a:padding="20dp">

		<Button
			a:id="@+id/button_save"
			style="?android:attr/borderlessButtonStyle"
			a:layout_width="wrap_content"
			a:layout_height="wrap_content"
			a:layout_alignParentBottom="true"
			a:layout_centerHorizontal="true"
			a:layout_weight="1"
			a:gravity="center"
			a:text="@string/user_information_button"
			a:textAppearance="?android:attr/textAppearanceButton"
			a:textColor="#009688"
			a:textSize="18sp" />

	</RelativeLayout>
</LinearLayout>